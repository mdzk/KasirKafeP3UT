<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="@color/biru_tua"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@color/biru_tua"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_id_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_kode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A1"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/kuning"/>

                    <TextView
                        android:id="@+id/tv_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu Mahasiswa"
                        android:textSize="16sp"
                        android:textColor="@color/kuning"/>

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi+Sayur+Ayam"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/kuning"/>

                    <TextView
                        android:id="@+id/tv_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 13.000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/kuning"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Sepiring nasi dengan lauk ayam goreng dan sayuran yang sehat"
                    android:textSize="16sp"
                    android:textColor="@color/kuning"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>